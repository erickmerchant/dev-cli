{
  "name": "@erickmerchant/dev-cli",
  "version": "11.0.2",
  "description": "A development CLI.",
  "homepage": "https://github.com/erickmerchant/dev-cli#readme",
  "bugs": {
    "url": "https://github.com/erickmerchant/dev-cli/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/erickmerchant/dev-cli.git"
  },
  "license": "ISC",
  "author": "Erick Merchant <erickmerchant@gmail.com>",
  "files": [
    "LICENSE",
    "README.md",
    "lib/",
    "cache.js",
    "cli.js",
    "serve.js"
  ],
  "bin": {
    "dev": "./cli.js"
  },
  "scripts": {
    "pretest": "eslint '*.js' 'lib/*.js'",
    "test": "node test.js"
  },
  "dependencies": {
    "@babel/core": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "accepts": "^1.3.7",
    "autoprefixer": "^9.8.0",
    "compression": "^1.7.4",
    "cssnano": "^4.1.10",
    "del": "^5.1.0",
    "find-cache-dir": "^3.3.1",
    "globby": "^11.0.0",
    "kleur": "^3.0.3",
    "mime-types": "^2.1.27",
    "parse5": "^6.0.0",
    "postcss": "^7.0.30",
    "postcss-value-parser": "^4.1.0",
    "sergeant": "^28.1.1",
    "terser": "^4.6.13"
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "eslint": "^7.1.0",
    "eslint-plugin-prettier": "^3.1.3",
    "prettier": "^2.0.5"
  },
  "engines": {
    "node": ">=14.2"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module"
    },
    "plugins": [
      "prettier"
    ],
    "env": {
      "browser": true,
      "node": true,
      "es6": true
    },
    "rules": {
      "prettier/prettier": "error",
      "eqeqeq": [
        "error",
        "always",
        {
          "null": "never"
        }
      ],
      "no-else-return": "error",
      "no-useless-escape": "error",
      "no-useless-return": "error",
      "no-delete-var": "error",
      "no-undef": "error",
      "no-unused-vars": [
        "error",
        {
          "vars": "all",
          "args": "none"
        }
      ],
      "handle-callback-err": "error",
      "no-path-concat": "error",
      "no-var": "error",
      "prefer-arrow-callback": "error",
      "prefer-const": "error",
      "prefer-template": "error"
    }
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": false,
    "htmlWhitespaceSensitivity": "ignore",
    "printWidth": 80,
    "proseWrap": "preserve",
    "quoteProps": "consistent",
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "none",
    "useTabs": false
  }
}
